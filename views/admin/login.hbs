<div class="container" style="margin-top: 50px;">
    <div class="row">
        <div class="col-12">
            <form action="/admin/login" method="post">
                <div class="form-group">
                    <label for="usuario">Usuario</label>
                    <input type="text" class="form-control" id="usuario" aria-describedby="emailHelp" name="usuario">
                </div>
                <div class="form-group">
                    <label for="password">Contraseña</label>
                    <input placeholder="**********" type="password" class="form-control" id="password" name="password">
                </div>
                <button type="submit" class="btn btn-primary">Enviar</button> <br>
                <h6 class="text-center seccionPrivada">Esta sección es únicamente para los administradores de la pagina web</h6>
            </form>
            {{#if error}}
            <p>Usuario inexistente o Contraseña incorrecta</p>
            {{/if}}
        </div>
    </div>
</div>